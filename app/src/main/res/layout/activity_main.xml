<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/background_image1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Registrar Libro"
        android:textSize="22sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Título del Libro"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etBookTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="Título del Libro" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Autor"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etAuthor"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="Autor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Género"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/etGenre"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="Género" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Año de Publicación"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etYear"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="Año de Publicación"
        android:inputType="number" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Número de Páginas"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etPages"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="Número de Páginas"
        android:inputType="number" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="2dp">


            <Button
                android:id="@+id/btnSaveBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#7B1FA2"
                android:textColor="#FFFFFF"
                android:text=""
                android:stateListAnimator="@null" />

            <ImageButton
                android:id="@+id/ibSaveBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/baseline_save_24"
                app:tint="#FFFFFF" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="2dp">

            <Button
                android:id="@+id/btnSearchBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#7B1FA2"
                android:textColor="#FFFFFF"
                android:text=""
                android:stateListAnimator="@null" />

            <ImageButton
                android:id="@+id/ibSearchBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/baseline_search_24"
                app:tint="#FFFFFF" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="2dp">

            <Button
                android:id="@+id/btnEditBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#7B1FA2"
                android:textColor="#FFFFFF"
                android:text=""
                android:stateListAnimator="@null" />

            <ImageButton
                android:id="@+id/ibEditBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/baseline_edit_24"
                app:tint="#FFFFFF" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="2dp">

            <Button
                android:id="@+id/btnDeleteBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#7B1FA2"
                android:textColor="#FFFFFF"
                android:text=""
                android:stateListAnimator="@null" />

            <ImageButton
                android:id="@+id/ibDeleteBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/baseline_delete_24"
                app:tint="#FFFFFF" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="2dp">

            <Button
                android:id="@+id/btnListBooks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#7B1FA2"
                android:textColor="#FFFFFF"
                android:text=""
                android:stateListAnimator="@null" />

            <ImageButton
                android:id="@+id/ibListBooks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/baseline_list_24"
                app:tint="#FFFFFF" />

        </FrameLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:src="@drawable/logolibromed" />

</LinearLayout>
